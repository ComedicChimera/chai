executable chai-frontend
    main-is:          Main.hs

    -- Modules included in this executable, other than Main.
    other-modules:
        -- Syntactic constructions
        Syntax.Lexer
        Syntax.Parser
        Syntax.AST
        Syntax.Internal

        -- Error reporting
        Report.Message

    -- LANGUAGE extensions used by modules in this package.
    other-extensions:
        FlexibleInstances
        MultiParamTypeClasses

    build-depends:    
        base ^>=4.15.0.0,
        parsec ^>=3.1.14.0

    hs-source-dirs:   app
    default-language: Haskell2010
